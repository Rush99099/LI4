@inherits LayoutComponentBase
@using BMW.Data
@inject UserState UserState

<div class="layout-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="images/bmw-logo.png" alt="BMW Logo" class="logo" />
            <h1 class="title">BMW</h1>
            <h2 class="subtitle">Assembly Manager</h2>
        </div>

        <div class="user-info">
            <p class="user-name">@UserState.UserName</p>
            <p class="user-role">@UserRole</p>
            <div class="divider"></div>
        </div>

        <nav class="menu">
            <NavLink href="@Button1Href" class="menu-item">
                <span class="menu-icon">@Button1Icon</span>
                @Button1Text
            </NavLink>
            <NavLink href="@Button2Href" class="menu-item">
                <span class="menu-icon">@Button2Icon</span>
                @Button2Text
            </NavLink>
        </nav>

        <div class="logout-section">
            <NavLink href="/" class="btn-logout">
                <span class="logout-icon">‚Ü©Ô∏è</span>
                Log out
            </NavLink>
        </div>
    </aside>

    <main class="content">
        <div class="background"></div> <!-- Fundo com o logo da BMW -->
        <div class="foreground">
            @ChildContent <!-- Conte√∫do principal -->
        </div>
    </main>
</div>

@code {
    [Parameter]
    public string UserName { get; set; } = "Utilizador";

    [Parameter]
    public string UserRole { get; set; } = "Perfil";

    [Parameter]
    public string Button1Text { get; set; } = "Bot√£o 1";
    [Parameter]
    public string Button1Href { get; set; } = "#";
    [Parameter]
    public string Button1Icon { get; set; } = "üîó";

    [Parameter]
    public string Button2Text { get; set; } = "Bot√£o 2";
    [Parameter]
    public string Button2Href { get; set; } = "#";
    [Parameter]
    public string Button2Icon { get; set; } = "üîó";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}

<style>
    .layout-container {
        display: flex;
        height: 100vh;
        background-color: #9e9e9e;
    }

    .sidebar {
        width: 300px;
        background-color: #121212;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
    }

    .sidebar-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .sidebar-header .logo {
        width: 120px;
        margin-top: 12px;
        margin-bottom: 2px;
    }

    .sidebar-header .title {
        margin: 0;
        font-size: 1.5rem;
    }

    .sidebar-header .subtitle {
        margin: 0;
        font-size: 1rem;
        color: #cccccc;
    }

    .user-info {
        text-align: center;
        margin-bottom: 20px;
    }

    .user-info .user-name {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .user-info .user-role {
        font-size: 1rem;
        color: #cccccc;
    }

    .divider {
        border-top: 1px solid #cccccc;
        margin: 10px 0;
    }

    .menu {
        display: flex;
        flex-direction: column;
    }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 12px;
        margin-bottom: 8px;
        text-decoration: none;
        color: #cccccc;
        font-size: 1rem;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .menu-item:hover {
        background-color: #1e1e1e;
        color: white;
    }

    .menu-icon {
        margin-right: 10px;
        font-size: 1.2rem;
    }

    .logout-section {
        text-align: center;
        margin-top: auto;
    }

    .btn-logout {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: transparent;
        color: #cccccc;
        border: none;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        font-size: 1rem;
        text-decoration: none;
        transition: color 0.3s;
    }

    .btn-logout:hover {
        color: white;
    }

    .logout-icon {
        font-size: 1.2rem;
        margin-right: 8px;
    }

    .content {
        flex-grow: 1;
        position: relative;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('images/bmw-logo-fundo.png') no-repeat center;
        background-size: 130%;
        background-position: top left;
        opacity: 0.2;
        z-index: 1;
    }

    .foreground {
        position: relative;
        z-index: 2;
        padding: 20px;
    }
</style>
