@page "/login"
@rendermode InteractiveServer
@using BMW.Data.Data
@using BMW.Data.Models
@using Microsoft.AspNetCore.Mvc

<PageTitle>Login</PageTitle>

<div class="container">
    <div class="content">
        <div class="logo">
            <img src="images/bmw-logo.png" alt="BMW Logo" />
        </div>
        <div class="title">
            <h1>BMW</h1>
            <h2>Assembly Manager</h2>
        </div>
        <div class="form">
            <input type="email" placeholder="Enter your email" class="form-input" @bind="email" />
            <input type="password" placeholder="Enter your password" class="form-input" @bind="password" />
            <NavLink class="btn btn-primary" href="@GetRedirectUrl()">Login</NavLink>
        </div>
    </div>
</div>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    
    private string GetRedirectUrl()
    {
        try
        {
            var user = BMWFacade.GetInstance().LogIn(email, password);
            if (user != null)
            {
                string destination = string.Empty;
                if (user.IsCliente)
                {
                    destination = $"/home?id={user.IdUtilizador}";
                }
                else
                {
                    destination = $"/funcionario?id={user.IdUtilizador}";
                }
                return destination;
            }
            Console.WriteLine("Credenciais inv√°lidas.");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro durante o login: {ex.Message}");
        }
        return "/login";
    }
}

