@page "/login"

<PageTitle>Login</PageTitle>

<div class="container" style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #121212; color: white;">
    <div class="content" style="text-align: center; width: 100%; max-width: 400px;">
        <div class="logo">
            <img src="images/bmw-logo.png" alt="BMW Logo" style="width: 250px; height: auto;" />
        </div>
        <div class="title" style="margin-top: 0px;">
            <h1 style="margin: 0; font-size: 2.5rem;">BMW</h1>
            <h2 style="margin: 0; color: #cccccc; font-size: 1.2rem;">Assembly Manager</h2>
        </div>
        <div class="form" style="margin-top: 40px;">
            <input type="email" placeholder="Enter your email" class="form-input" style="width: 100%; padding: 12px; margin-bottom: 15px; border: none; border-radius: 5px; background-color: #d4d4d4; color: white; font-size: 16px;" />
            <input type="password" placeholder="Enter your password" class="form-input" style="width: 100%; padding: 12px; margin-bottom: 20px; border: none; border-radius: 5px; background-color: #d4d4d4; color: white; font-size: 16px;" />
            <button class="btn btn-primary" style="width: 100%; padding: 12px; font-size: 16px; background-color: #007bff; border: none; border-radius: 5px; color: white;" @onclick="HandleLogin">Login</button>
        </div>
    </div>
</div>

