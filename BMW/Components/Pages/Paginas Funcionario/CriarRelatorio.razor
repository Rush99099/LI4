@code {
    private int TipoRelatorio = 1;

    private void GerarRelatorio()
    {
        try
        {
            // Gerar o conte煤do do relat贸rio dinamicamente
            string conteudo = TipoRelatorio == 1
                ? GerarConteudoRelatorioEncomendas()
                : "Relat贸rio do tipo gen茅rico gerado.";

            // Obter o ID do funcion谩rio autenticado
            int idFuncionario = UserState.UserId;

            // Chamar o m茅todo para criar o relat贸rio
